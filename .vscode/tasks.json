{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64.exe",
            "args": [
                "-c",
                "cd \"${workspaceFolder}\" && make debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64.exe",
            "args": [
                "-c",
                "cd \"${workspaceFolder}\" && make release"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64.exe",
            "args": [
                "-c",
                "cd \"${workspaceFolder}\" && make clean"
            ],
            "problemMatcher": []
        }
    ]
}